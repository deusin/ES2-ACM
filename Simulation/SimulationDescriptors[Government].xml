  <!--  DEMOCRACY  -->
  <SimulationDescriptor Name="GovernmentDemocracy" Type="Government">
    <Modifier TargetProperty="NumberOfSenatorSlots" Operation="Force" Value="3" Path="ClassSenate" TooltipOverride="%GovernmentSenatorSlots3"/>
