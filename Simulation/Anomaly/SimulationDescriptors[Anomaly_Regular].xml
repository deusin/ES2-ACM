  </SimulationDescriptor>

  <!-- Dust Halo -->
  <SimulationDescriptor Name="PlanetAnomaly49Regular" Type="PlanetAnomaly" >
    <Modifier TargetProperty="PlanetInitialDustPerPopulation" Value="4" Operation="Addition" Path="ClassPlanet" />
